    <script>
        // Configura√ß√µes do Google Drive API
        const CLIENT_ID = 'SEU_CLIENT_ID'; // Substitua pelo seu Client ID
        const API_KEY = 'SUA_CHAVE_DE_API'; // Substitua pela sua chave de API
        const DISCOVERY_DOCS = ["https://www.googleapis.com/discovery/v1/apis/drive/v3/rest"];
        const SCOPES = 'https://www.googleapis.com/auth/drive.file';

        // Fun√ß√£o para autenticar o usu√°rio
        function handleAuthClick() {
            gapi.auth2.getAuthInstance().signIn();
        }

        // Fun√ß√£o para inicializar a API do Google
        function initClient() {
            gapi.client.init({
                apiKey: API_KEY,
                clientId: CLIENT_ID,
                discoveryDocs: DISCOVERY_DOCS,
                scope: SCOPES
            }).then(() => {
                console.log("API do Google inicializada.");
            });
        }

        // Carregar a API do Google
        function loadGoogleAPI() {
            gapi.load('client:auth2', initClient);
        }

        // Fun√ß√£o para exportar a p√°gina para PDF e enviar para o Google Drive
        async function exportToPDFAndUpload() {
            const element = document.body;
            const pdf = await html2pdf().from(element).output('blob'); // Gera o PDF como Blob

            const fileMetadata = {
                name: 'feedback.pdf', // Nome do arquivo
                mimeType: 'application/pdf'
            };

            const formData = new FormData();
            formData.append('metadata', new Blob([JSON.stringify(fileMetadata)], { type: 'application/json' }));
            formData.append('file', pdf);

            const accessToken = gapi.auth2.getAuthInstance().currentUser.get().getAuthResponse().access_token;

            fetch('https://www.googleapis.com/upload/drive/v3/files?uploadType=multipart', {
                method: 'POST',
                headers: new Headers({ 'Authorization': 'Bearer ' + accessToken }),
                body: formData
            }).then(response => response.json())
              .then(data => {
                  console.log('Arquivo enviado com sucesso:', data);
                  alert('PDF salvo no Google Drive!');
              }).catch(error => {
                  console.error('Erro ao enviar arquivo:', error);
              });
        }

        // Adicionar evento ao bot√£o SALVAR TUDO
        document.getElementById("save-all-button").addEventListener("click", () => {
            handleAuthClick(); // Autentica o usu√°rio
            setTimeout(exportToPDFAndUpload, 2000); // Aguarda a autentica√ß√£o e envia o PDF
        });

        // Carregar a API do Google ao iniciar a p√°gina
        loadGoogleAPI();
    </script>
